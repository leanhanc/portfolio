---
import { Image } from "@astrojs/image/components";

// Assets
import heroMobile from "../assets/img/hero-mobile.jpg";
import heroDesktop from "../assets/img/hero-desktop.jpg";
---

<style lang="sass">
	@import "../styles/mixins.sass"
	#Header
		height: 100%
		position: relative

		.background
			width: 100%
			height: 100%
			max-height: 100%
			object-fit: cover
			position: absolute
			top: 0
			left: 0
			+clipped-rtl

			&.desktop
				display: none

			+min-md
				&.mobile
					display: none
				&.desktop
					display: block

		.dark-layer
			width: 100%
			height: 100%
			background-color: black
			inset: 0
			opacity: 0.3
			position: absolute

		.headline
			cursor: default
			position: relative
			text-align: center
			text-shadow: var(--shadow-1)
</style>

<header id="Header">
	<Image
		alt=""
		class="background mobile"
		format="webp"
		quality={20}
		src={heroMobile}
	/>
	<Image
		alt=""
		class="background desktop"
		format="webp"
		quality={50}
		src={heroDesktop}
	/>
	<div class="dark-layer" aria-hidden="true"></div>

	<h1 class="headline">Leandro Hanc</h1>
</header>
