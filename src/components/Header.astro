---
import { Image } from "@astrojs/image/components";

// Assets
import heroMobile from "../assets/img/hero-mobile.jpg";
import heroDesktop from "../assets/img/hero-desktop.jpg";

import githubIcon from "../assets/img/social/github.svg";
import twitterIcon from "../assets/img/social/twitter.svg";
import linkedinIcon from "../assets/img/social/linkedin.svg";
---

<header id="header">
	<Image
		alt=""
		class="background mobile"
		format="webp"
		quality={20}
		src={heroMobile}
	/>
	<Image
		alt=""
		class="background desktop"
		format="webp"
		quality={50}
		src={heroDesktop}
	/>
	<div class="dark-layer" aria-hidden="true"></div>

	<h1 class="headline title">Leandro Hanc</h1>
	<p class="headline subtitle">IDEAS BRINGED TO LIFE</p>

	<ul id="social-icons">
		<li class="social-icon">
			<img src={githubIcon} alt="Github Page" width="24" height="24" />
		</li>
		<li class="social-icon">
			<img
				src={linkedinIcon}
				alt="My LinkedIn Page"
				width="24"
				height="24"
			/>
		</li>
		<li class="social-icon">
			<img src={twitterIcon} alt="My Twitter" width="24" height="24" />
		</li>
	</ul>

	<a class="cta" href="mailto:leandrohanc@gmail.com">WORK TOGETHER</a>
</header>

<style lang="sass">
	@import "../styles/mixins.sass"

	#header
		height: 100%
		position: relative
		display: flex
		flex-direction: column
		align-items: center
		padding: 100px

		.background
			width: 100%
			height: 100%
			max-height: 95vh
			object-fit: cover
			position: absolute
			top: 0
			left: 0
			@include clipped-rtl

			&.desktop
				display: none

				@include min-md
					display: block

			&.mobile
				@include min-md
					display: none

		.dark-layer
			width: 100%
			max-height: 95vh
			background-color: black
			inset: 0
			opacity: 0.25
			position: absolute
			@include clipped-rtl

		.headline
			cursor: default
			position: relative
			text-align: center
			text-shadow: var(--shadow-1)
			position: relative

		/* TITLE */
		.title
			color: var(--grey-500)
			font-size: 3rem
			font-family: 'Allison', cursive
			font-weight: normal
			line-height: 1.2
			text-align: center

			@include min-md
				font-size: 5.5rem

				@include min-lg
					font-size: 8rem

		/* SUBTITLE */
		.subtitle
			color: var(--blue)
			font-size: 1.3rem
			letter-spacing: 6px
			margin-top: 1rem
			line-height: 1.7
			text-shadow: var(--shadow-1)
			text-transform: uppercase
			text-align: center

		/* SOCIAL ICONS */
		#social-icons
			margin: 4rem auto
			position: relative
			width: 100%
			display: flex
			justify-content: center
			gap: 4rem

			.social-icon
				cursor: pointer
				transform: rotate(0) scale(1.2)
				display: grid
				place-content: conter
				transition: 0.3s all ease

				&:hover
					backface-visibility: hidden
					transform: rotate(1turn) scale(1.5)
					transition: 0.35s all ease

		/* CTA BUTTON */
		a.cta,
		a.cta:visited
			background-image: linear-gradient(to right, var(--blue), var(--red), var(--purple))
			border-radius: 3rem
			border: none
			color: white
			cursor: pointer
			font-family: 'Open Sans'
			font-weight: 500
			letter-spacing: 4px
			margin-top: 4rem
			opacity: 0.75
			padding: 1rem
			text-decoration: none
			text-shadow: none
			text-transform: uppercase
			transition: all 0.4s
			position: relative

		a.cta:hover
			transform: translateY(-3px)

		a.cta:hover::after
			transform: scaleX(1.4) scaleY(1.6)
			opacity: 0

		a.cta:active,
		a.cta:focus
			outline: none
			transform: translateY(-1px)
			box-shadow: 0 0.5rem 1rem rgba(black, 0.2)

		a.cta::after
			content: ''
			display: block
			height: 100%
			width: 100%
			border-radius: 4rem
			z-index: -1
			position: absolute
			top: 0
			background-image: linear-gradient(to right, var(--blue), var(--red), var(--purple))
			left: 0
			transition: all 0.4s

		@media screen and (min-width: 1100px)
			a.cta,
			a.cta:visited,
			a.cta:active
				font-size: 1rem
				padding: 1.2rem 3rem
				width: fit-content
</style>
