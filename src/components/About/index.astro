---
import { Image } from "@astrojs/image/components";

// Components
import SectionTitleInBackground from "../SectionTitleInBackground.svelte";
import Intro from "./components/Intro.svelte";
import Bio from "./components/Bio.svelte";

// Assets
import Me from "../../assets/img/about-me.jpg"

---

<section id="about-me">
    <SectionTitleInBackground text="about" />

    <div class="main-container container">
        <div class="left-column">
            <Intro client:load />
            <Bio client:load />
        </div>
    
    <Image
        alt="A picture of me, Leandro, a web developer"
        class="profile-pic"
        format="webp"
        src={Me} />
    </div>
</section>

<style lang="sass">
  @import "../../styles/mixins.sass"

  #about-me
    height: 100%
    width: 100%
    background-color: var(--grey-500)
    position: relative
    padding-top: 4rem
    padding-bottom: 4rem
    @include min-md
        padding-top: 8rem
        padding-bottom: 8rem

    .main-container
        height: 100%
        padding-top: 2rem
        padding-bottom: 2rem

        .left-column
            height: 100%
            display: flex
            flex-direction: column

    .profile-pic
        height: auto
        width: 50%
        border-radius: 4px
        filter: drop-shadow(grey 0px 0px 1rem)
        margin-top: 4rem
        margin-left: auto
        margin-right: auto

        @include min-md
            margin-top: 0
            max-width: 272px
</style>