---
import { Image } from "@astrojs/image/components";

// Components
import Heading from "./components/Heading.svelte";
import Bio from "./components/Bio.svelte";

// Assets
import Me from "../../assets/img/about-me.jpg"

---

<section id="about-me">
    <div class="main-container container">
        <div class="left-column">
            <Heading client:load />
            <Bio client:load />
        </div>
    
    <Image
        alt="A picture of me, Leandro, a web developer"
        class="profile-pic"
        format="webp"
        src={Me} />
    </div>
</section>

<style lang="sass">
  @import "../../styles/mixins.sass"

  #about-me
    height: 100%
    width: 100%
    margin-top: -4rem
    padding-top: 4rem
    background-color: var(--grey-500)

    .main-container
        height: 100%
        padding-top: 2rem
        padding-bottom: 2rem

        .left-column
            height: 100%
            display: flex
            flex-direction: column

    .profile-pic
        height: auto
        width: 100%
        border-radius: 4px
        filter: drop-shadow(black 0px 0px 0.5rem)
        margin-top: 2rem

        @include min-sm
            max-width: 272px
</style>